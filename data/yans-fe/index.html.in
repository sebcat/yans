<!DOCTYPE html>
<html>
<head>
<title>Yans</title>
<style>
body {
  margin: 0px;
  font-family: Roboto,"Helvetica Neue",Arial,sans-serif;
}

.navbar {
  background-color: #007bff;
  font-size: 1.25rem;
  padding: .5rem 1rem;
  display: flex;
  flex-direction: row;
}

.navbar a {
  color: #fff;
  text-decoration: none;
  margin-right: 1rem;
}

.navbar a:hover {
  color: #ccc;
}

.navbar small {
  color: #444;
}

.navbar-ents {
    list-style: none;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    margin: 0;
    padding: 0;
}

#main-box {
  margin: 1rem 1.5rem;
}

</style>
</head>
<body>

<nav class="navbar">
    <ul class="navbar-ents">
      <li><a href="#scanner">Scanner</a></li>
      <li><a href="#scans">Scans</a></li>
    </ul>
    <small>@PACKAGE_VERSION@</small>
</nav>

<div id="main-box"></div>

<noscript>This webapp requires JavaScript</noscript>

<script>
"use strict";

function Yans(_top) {
  this.top = document.getElementById(_top);

  this.renderScanner = function() {
    this.top.innerText = "All glory to the scanner";
  };

  this.renderScans = function() {
    this.top.innerText  = "Scans away!";
  };

  this.renderLUT = {
    'scanner': this.renderScanner.bind(this),
    'scans': this.renderScans.bind(this),
  };

  this.render = function() {
    var view;
    if (window.location.hash) {
      view = window.location.hash.substring(1);
    }

    var f = this.renderLUT[view];
    console.log(f);
    if (f) {
      f();
    } else {
      this.renderScanner();
    }
  };

  window.addEventListener("hashchange", this.render.bind(this));
  this.render();
}

var y = new Yans("main-box");

</script>

</body>
</html>

