#!/bin/sh
# PROVIDE: ethd
# REQUIRE: LOGIN FILESYSTEMS
# KEYWORD: shutdown

. /etc/rc.subr

# Creating the group and user:
#   pw groupadd ethd
#   pw useradd ethd -d @LOCALSTATEDIR@/ethd -g ethd -s /usr/sbin/nologin
#
# The daemon drops user privs itself, which is why ethd_user, ethd_group
# is not used
: ${ethd_duser:="ethd"}
: ${ethd_dgroup:="ethd"}



# devfs needs to be mounted inside the chroot of ethd so that
# it is possible for ethd to access the bpf device. The ID
# of this ruleset must be set in /etc/rc.conf.
#
# NB: if the ruleset is set but the ID does not exist in /etc/devfs.rules
#     a new one will be used, with no hidden devices. This is bad.
#
# example ruleset:
#   [ethdrules=67]
#   add hide
#   add path bpf mode 660 unhide
: ${ethd_devfs_ruleset:=""}

name="ethd"
rcvar="ethd_enable"
command="@BINDIR@/ethd"
command_args="-u ${ethd_duser} -g ${ethd_dgroup} -b @LOCALSTATEDIR@/ethd"
start_precmd="ethd_precmd"
pidfile="@LOCALSTATEDIR@/ethd/ethd.pid"

ethd_precmd()
{
  if [ -z "${ethd_devfs_ruleset}" ]; then
    warn "ethd_devfs_ruleset is not set"
    return 1
  fi

  case ${ethd_devfs_ruleset} in
    ''|*[!0-9]*)
      warn "ethd_devfs_ruleset must be a number"
      return 1
      ;;
  esac

  if [ -d @LOCALSTATEDIR@/ethd/dev ]; then
    umount @LOCALSTATEDIR@/ethd/dev 2>/dev/null
  fi

  if [ -d @LOCALSTATEDIR@/ethd ]; then
    rm -rf @LOCALSTATEDIR@/ethd
  fi

  mkdir @LOCALSTATEDIR@/ethd || {
    warn "Unable to create @LOCALSTATEDIR@/ethd"
    return 1
  }

  chmod 770 @LOCALSTATEDIR@/ethd || {
    warn "Failed to set correct permissions of @LOCALSTATEDIR@/ethd"
    return 1
  }

  chown "${ethd_duser}:${ethd_dgroup}" @LOCALSTATEDIR@/ethd || {
    warn "Failed to set correct ownership of @LOCALSTATEDIR@/ethd"
    return 1
  }

  # mount devfs in chroot
  mkdir @LOCALSTATEDIR@/ethd/dev
  mount -t devfs -o ruleset=${ethd_devfs_ruleset} \
      devfs @LOCALSTATEDIR@/ethd/dev || {
    warn "Failed to mount ethd devfs"
    return 1
  }

  # Set correct owner:group for bpf device
  # this should probably be in /etc/devfs.conf, or /etc/devfs.rules,
  # own  bpf* <user>:<group>
  # perm bpf* 0660
  chown "${ethd_duser}:${ethd_dgroup}" @LOCALSTATEDIR@/ethd/dev/bpf || {
    warn "Failed to chown bpf device for ethd"
    return 1
  }

  return 0
}

load_rc_config $name
run_rc_command "$1"
